{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["./src/**/*.js","./src/**/*.ts", "./src/**/*.vue", "**/*.ts"],
  "exclude": ["./src/**/*.cy.ts", "cypress", "tests"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noEmit": true,
  },

  "vueCompilerOptions": {
    "target": 3.3,
  },

  "ts-node": {
    "compilerOptions": {
      "module": "ES2015",
      "target": "ES2015",
      "moduleResolution": "node"
    }
  }
}
